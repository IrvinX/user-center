{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    //可以使用箭头函数进行component中的方法声明
    "parser": "babel-eslint",
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        //跳过未在component中声明的props的检验
        "react/prop-types": [
            2,
            {
                "skipUndeclared": true
            }
        ],
        "no-debugger":"off"
    },
    "globals": {
        "__dirname": true
    }
}